{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 1pm on sunday"]
  },
  "postUpdateOptions": ["npmDedupe"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["bare-events"],
      "enabled": false,
      "description": "bare-eventsは@nuxt/imageとnuxtの依存関係で必要だが、renovateが不要と判断して削除するため無効化"
    }
  ]
}
